{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "services": [
    {
      "name": "Backend-API",
      "project": "JOSNISHOP_000",
      "gitBasePath": "BACKEND",
      "rootDirectory": "BACKEND",
      "buildCommand": "docker build -t app:latest .",
      "startCommand": "sh -c \"alembic upgrade head && uvicorn main:app --host 0.0.0.0 --port 8000\""
    },
    {
      "name": "Frontend-Web",
      "project": "JOSNISHOP_000",
      "gitBasePath": "FRONTEND",
      "rootDirectory": "FRONTEND",
      "buildCommand": "npm install && npm run build",
      "startCommand": "npm run start"
    }
  ]
}
